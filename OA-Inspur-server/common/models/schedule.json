{
  "name": "Schedule",
  "description": "日程表",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true,
      "description": "标题"
    },
    "employee_id": {
      "type": "string",
      "required": true,
      "description": "员工ID"
    },
    "description": {
      "type": "string",
      "required": true,
      "description": "描述"
    },
    "done": {
      "type": "boolean",
      "required": true,
      "description": "是否完成"
    },
    "start_time": {
      "type": "date",
      "required": true,
      "description": "开始时间"
    },
    "end_time": {
      "type": "string",
      "description": "结束时间"
    }
  },
  "validations": [],
  "relations": {
    "employee": {
      "type": "belongsTo",
      "model": "Employee",
      "foreignKey": "employee_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "superAdmin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
